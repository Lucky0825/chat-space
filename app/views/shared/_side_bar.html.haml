.side
  .side__top
    .side__top__box
      = current_user.name
      .side-top-box-box
        =link_to new_group_path, class: "side_top_box-box_btn" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')

  .side-content
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group) do
          .group
            = group.name
          .chat
            = group.show_last_message
      